@model IEnumerable<SportsLeague.Models.Team>

@{ 
    ViewData["Title"] = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Soccer</h2>

<table class="table">
    <tr>
        <th>
            <h4>Team Name</h4>
        </th>
        <th>
            <h4>Division</h4>
        </th>
        <th></th>
    </tr>
    @foreach (var team in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelTeam => team.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelTeam => team.Division.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = team.TeamId }) |
                @Html.ActionLink("Details", "Details", new { id = team.TeamId }) |
                @Html.ActionLink("Delete", "Delete", new { id = team.TeamId})
            </td>
        </tr>
    }
    
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>